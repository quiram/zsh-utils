#!/usr/bin/env zsh

# Common utilities to all the build-related scripts

BUILD_SCRIPTS_DIR=$(dirname "$(readlink -f "$0")")
source "${BUILD_SCRIPTS_DIR}/../common/utils"

rebase_if_remote() {
    remote=$(remote-branch-name)

    if [[ -n "${remote}" ]]; then
        log "Rebasing from remote (${remote})..."
        git pull -r || exit 1
    fi
}

push_changes() {
    options=$*
    remote=$(remote-branch-name)

    log "Pushing changes..."
    if [[ -z "${remote}" ]]; then
        git push --set-upstream origin "$(branch-name)" || exit 1
    else
        # shellcheck disable=SC2086
        git push ${options} || exit 1
    fi
}
